//2. efficient approach.

class Binarysearch2
{
    static int sortedArr(int arr[],int x,int n)
    {
        int low = 0;
        int high = n;
       int  mid = (low+high)/2;
       while(low<high)
       { 
        if(x==mid)
        
            return mid;
        
        else if(arr[mid]>x)
        
            high = mid-1;
        
        else
        
         
            low = mid+1;
        
       }
       return -1;
    }
    public static void main(String[] args){
        int arr[] = {2,8,9,45,63};
        int n = arr.length-1;
        int x = 9;
        System.out.println(sortedArr(arr,x,n))  ;     
    }
}